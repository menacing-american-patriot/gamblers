# Polygon wallet configuration
PRIVATE_KEY=your_ethereum_private_key_here
POLYGON_RPC_URL=https://polygon-rpc.com

# (Optional) Proxy / smart-wallet settings
POLYMARKET_PROXY_ADDRESS=your_proxy_or_funder_address
POLYMARKET_SIGNATURE_TYPE=1

# Polymarket CLOB API (Level 2) credentials
POLY_API_KEY=your_clob_api_key_here
POLY_API_SECRET=your_clob_api_secret_here
POLY_API_PASSPHRASE=your_clob_api_passphrase_here

# Shared portfolio treasury
PORTFOLIO_STARTING_CASH=100

# LLM / OpenAI-compatible configuration
LLM_BASE_URL=http://localhost:11434
LLM_MODEL=llama3.1
LLM_API_KEY=
LLM_TIMEOUT=20
LLM_TEMPERATURE=0.6
LLM_PROVIDER=ollama
LLM_FORCE_JSON=true

# Hivemind multi-model orchestration
HIVEMIND_COORDINATOR_MODEL=
HIVEMIND_SPECIALIST_MODELS=
HIVEMIND_MAX_TOKENS=384
HIVEMIND_FORCE_JSON=true

# LLM-driven agent tuning
OLLAMA_BET_PCT=0.25
OLLAMA_MIN_CONFIDENCE=0.6
OLLAMA_MAX_TOKENS=256

# Manager agent settings
MANAGER_MAX_BET_PCT=0.35
